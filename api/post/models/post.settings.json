    "goals": {
      "collection": "goal",
      "via": "posts"
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "comments": {
      "collection": "comment"
    },
    "slug": {
      "type": "uid"
    }
  }
}
